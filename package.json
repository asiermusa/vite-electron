{
  "name": "azkar-rfid",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm:electron-dev\"",
    "electron-dev": "nodemon --quiet \"electron .\"",
    "build": "vite build && electron-builder --mac"
  },
  "nodemonConfig": {
    "watch": [
      "main.js",
      "src/includes/**.**"
    ],
    "exec": "electron .",
    "ext": "js,json",
    "quiet": true
  },
  "build": {
    "appId": "com.azkar.online",
    "asar": true,
    "productName": "Azkar - Kirol kronometrajea",
    "files": [
      "dist/index.html",
      "dist/assets/**/*",
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.png"
    },
    "win": {
      "icon": "src/assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.7",
    "concurrently": "^9.0.1",
    "core-js": "^3.8.3",
    "electron-dl": "^3.5.2",
    "exceljs": "^4.4.0",
    "form-data": "^4.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "material-design-icons-iconfont": "^6.7.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "net": "^1.0.2",
    "play-sound": "^1.1.6",
    "serialport": "^12.0.0",
    "socket.io-client": "^4.7.5",
    "systeminformation": "^5.23.13",
    "vue": "^3.5.10",
    "vue-router": "^4.5.0",
    "vuetify": "^3.7.0-beta.1",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "electron": "^31.5.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.7",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.2",
    "vite": "^5.4.8",
    "vite-plugin-electron-builder": "^0.1.0"
  }
}
